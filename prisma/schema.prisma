generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  username  String   @unique
  fullname  String? 
  email     String    @unique
  phone     String?
  password  String
  refreshToken  String?
  role    Role     @default(USER)  
  created_at  DateTime @default(now()) @map("created_at")

}

enum Role {
  SUPERADMIN
  VENDOR
  USER
}


